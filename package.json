  "author": "Sibelius Seraphini <sibeliusseraphini@gmail.com>",
  "devDependencies": {
    "@babel/preset-modules": "0.1.3",
    "@types/bcryptjs": "^2.4.1",
    "@types/dotenv-safe": "8.1.0",
    "@types/dotenv-webpack": "1.7.0",
    "@types/graphql": "^14.2.2",
    "@types/graphql-relay": "^0.6.0",
    "@types/history": "4.7.5",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^24.0.11",
    "@types/jscodeshift": "^0.6.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-convert": "^1.2.0",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-multer": "^1.0.0",
    "@types/koa-router": "^7.0.37",
    "@types/mockdate": "^2.0.0",
    "@types/mongoose": "^5.3.7",
    "@types/node": "^10.14.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.0.7",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-relay": "7.0.3",
    "@types/react-router-config": "^5.0.1",
    "@types/rebass": "^4.0.4",
    "@types/relay-runtime": "8.0.8",
    "@types/relay-test-utils": "^6.0.2",
    "@types/styled-components": "4.4.2",
    "@types/styled-system": "5.1.6",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "babel-jest": "25.1.0",
    "concurrently": "^5.3.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-okonet": "7.0.2",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-shellscape": "2.0.2",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-import-resolver-webpack": "0.11.1",
    "eslint-plugin-cypress": "2.2.1",
    "eslint-plugin-flowtype": "3.11.1",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "7.14.2",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-relay": "1.3.2",
    "eslint-plugin-typescript": "0.14.0",
    "git-json-merge": "^0.4.4",
    "hygen": "5.0.3",
    "jest": "25.1.0",
    "jest-junit": "5.2.0",
    "lerna": "^3.4.1",
    "lint-staged": "^9.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.2",
    "typescript": "3.8.3"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn prettier",
      "eslint --fix",
      "git add"
    ],
    "*.yml": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sibelius/relay-workshop.git"
  },
  "resolutions": {
    "**/graphql": "15.0.0",
    "**/react": "0.0.0-experimental-f42431abe",
    "**/react-dom": "0.0.0-experimental-f42431abe",
    "**/styled-system": "5.1.5"
  },
  "scripts": {
    "b": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\"",
    "build:server": "yarn workspace @workshop/graphql build && yarn workspace @workshop/server build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "copy-envs": "cp packages/server/.env.example packages/server/.env && cp packages/web/.env.example packages/web/.env",
    "get-token": "yarn b ./packages/server/scripts/getToken.ts",
    "jest": "jest",
    "lint:staged": "lint-staged",
    "postinstall": "yarn patch-package && yarn workspace @workshop/graphql build",
    "prettier": "prettier --write --single-quote true --trailing-comma all --print-width 120",
    "relay": "yarn workspace @workshop/web relay",
    "seed": "yarn b ./packages/server/scripts/seed.ts",
    "server": "yarn workspace @workshop/server start",
    "server:serve": "yarn workspace @workshop/server serve",
    "update-schema": "yarn workspace @workshop/server update-schema",
    "web": "yarn workspace @workshop/web start",
    "start": "concurrently --kill-others \"yarn workspace @workshop/web start\" \"yarn workspace @workshop/server start\""
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "workshop/*",
      "workshop-solutions/*",
      "slides/*"
    ]
  }
}
