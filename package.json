{
  "name": "relay-workshop",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sibelius/relay-workshop.git"
  },
  "author": "Sibelius Seraphini <sibeliusseraphini@gmail.com>",
  "scripts": {
    "all:relay": "lerna run relay --parallel --ignore @workshop/0* --ignore @workshop/1*",
    "b": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\"",
    "build:server": "yarn workspace @workshop/server build",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "copy-envs": "cp packages/server/.env.example packages/server/.env && cp packages/web/.env.example packages/web/.env",
    "es": "node -r esbuild-register",
    "get-token": "yarn b ./packages/server/scripts/getToken.ts",
    "jest": "jest",
    "lint": "yarn eslint --fix",
    "lint:staged": "lint-staged",
    "postinstall": "yarn patch-package",
    "prettier": "prettier --write **/src/**/*.ts && prettier --write **/src/**/*.tsx",
    "relay": "yarn workspace @workshop/web relay",
    "seed": "yarn workspace @workshop/server seed",
    "server": "yarn workspace @workshop/server start",
    "server:serve": "yarn workspace @workshop/server serve",
    "start": "concurrently --kill-others \"yarn workspace @workshop/web start\" \"yarn workspace @workshop/server start\"",
    "update-schema": "yarn w ./packages/server/scripts/updateSchema.ts",
    "w": "yarn b webpackx.ts",
    "web": "yarn workspace @workshop/web start"
  },
  "devDependencies": {
    "@babel/preset-modules": "0.1.5",
    "@types/bcryptjs": "^2.4.1",
    "@types/dotenv-safe": "8.1.2",
    "@types/dotenv-webpack": "7.0.3",
    "@types/graphql-relay": "^0.7.0",
    "@types/history": "5.0.0",
    "@types/isomorphic-fetch": "0.0.36",
    "@types/jest": "^27.0.1",
    "@types/jscodeshift": "^0.11.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-convert": "^1.2.0",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-multer": "^1.0.0",
    "@types/koa-router": "^7.4.1",
    "@types/mockdate": "^3.0.0",
    "@types/mongoose": "^5.11.58",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-infinite-scroller": "^1.2.1",
    "@types/react-relay": "13.0.1",
    "@types/react-router-config": "^5.0.1",
    "@types/rebass": "^4.0.7",
    "@types/relay-runtime": "13.0.2",
    "@types/relay-test-utils": "^6.0.3",
    "@types/styled-components": "5.1.24",
    "@types/styled-system": "5.1.15",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.17.0",
    "babel-jest": "27.5.1",
    "concurrently": "^7.0.0",
    "crypto-browserify": "^3.12.0",
    "esbuild-register": "^3.3.2",
    "eslint": "8.12.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-okonet": "7.0.2",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-shellscape": "5.0.2",
    "eslint-import-resolver-lerna": "^2.0.0",
    "eslint-import-resolver-typescript": "2.7.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-relay": "1.8.3",
    "eslint-plugin-typescript": "0.14.0",
    "git-json-merge": "^0.4.4",
    "https-browserify": "^1.0.0",
    "hygen": "6.2.0",
    "jest": "27.5.1",
    "jest-junit": "13.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "2.6.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "4.6.3"
  },
  "resolutions": {
    "graphql": "16.2.0",
    "html-webpack-plugin": "5.3.1",
    "react": "18.0.0-rc.0",
    "react-dom": "18.0.0-rc.0",
    "styled-system": "5.1.5",
    "webpack": "5.38.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.yml": [
      "prettier --write"
    ]
  },
  "pre-commit": "lint:staged",
  "workspaces": {
    "packages": [
      "packages/*",
      "workshop/*",
      "solutions/*",
      "slides/*"
    ]
  }
}
